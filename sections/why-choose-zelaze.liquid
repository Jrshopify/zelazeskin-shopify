{{ 'owl.carousel.min.css' | asset_url | stylesheet_tag }}
{{ 'owl.theme.default.min.css' | asset_url | stylesheet_tag }}
<script defer src="{{ 'owl.carousel.js' | asset_url }}"></script>
<script defer src="{{ 'custom.js' | asset_url }}"></script>
<div class="container">
  <div class="head-sub">
    {% if section.settings.head != blank %}
      <h3>{{ section.settings.head }}</h3>
    {% endif %}
    {% if section.settings.description != blank %}
      <h3>{{ section.settings.description }}</h3>
    {% endif %}
  </div>
  <div class="row">
    {% assign count = 1 %}
    {% for block in section.blocks %}
      <div class="col">
        {% if block.settings.video_url != blank %}
          <div class="video-wrap">
            <video
              id="playpause{{ count }}"
              class="video"
              width="100%"
              height="240"
              data-play_btn_id="play_btn_id{{ count }}"
              poster="{{ block.settings.poster_img | img_url: 'master' }}"
            >
              <source src="{{ block.settings.video_url }}" type="video/mp4">
            </video>
            <div data-vidid="playpause{{ count }}" class="playbtn" id="play_btn_id{{ count }}">
              <img
                src="https://cdn.shopify.com/s/files/1/0577/1332/8304/files/play.png?v=1686831446"
                title="Play"
                alt="Play"
              >
            </div>
          </div>
        {% endif %}
      </div>
      {% assign count = count | plus: 1 %}
    {% endfor %}
  </div>
</div>
{% schema %}
{
  "name": "Why choose zelaze",
  "tag": "section",
  "class": "why-choose-people",
  "settings": [
    {
      "type": "richtext",
      "id": "head",
      "label": "Main Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "description"
    }
  ],
  "blocks": [
    {
      "type": "why_choose",
      "name": "why choose",
      "settings": [
        {
          "type": "text",
          "id": "video_url",
          "label": "Video url"
        },
        {
          "type": "image_picker",
          "id": "poster_img",
          "label": "poster Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why choose zelaze"
    }
  ]
}
{% endschema %}
