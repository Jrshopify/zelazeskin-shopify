<div class="container-fluid p-0">
    <div class="row m-0 align-items-center">
        <div class="col-lg-6 p-0">
            <div class="banner-image">
                {%if section.settings.banner_img != blank%}
                    <img src="{{section.settings.banner_img | img_url: 'master'}}" />
                {%endif%}
            </div>
        </div>
        <div class="col-lg-6 p-0">
            <div class="banner-details">
                {%if section.settings.head != blank%}
                    <h1>{{section.settings.head}}</h1>
                {%endif%}
                {%if section.settings.desc != blank%}
                    <p>{{section.settings.desc}}</p>
                {%endif%}
                {%if section.settings.btn_lebel != blank%}
                    <a href="{{section.settings.btn_url}}" class="btn">{{section.settings.btn_lebel}}</a>
                {%endif%}
            </div>
        </div>
    </div>
</div>
{%schema%}
{
    "name": "Banner",
    "tag": "section",
    "class": "result-banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "banner_img",
            "label": "Banner Image"
        },
        {
            "type": "richtext",
            "id": "head",
            "label": "Banner Heading"
        },
        {
            "type": "richtext",
            "id": "desc",
            "label": "Description"
        },
        {
            "type": "text",
            "id": "btn_lebel",
            "label": "Button Lebel"
        },
        {
            "type": "url",
            "id": "btn_url",
            "label": "Button Link"
        }
    ],
    "presets": [
        {
            "name": "Banner"
        }
    ]
}
{%endschema%}