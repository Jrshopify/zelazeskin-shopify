      "type": "richtext",
      "id": "heading",
      "label": "Banner Heading"
    },
    {
      "type": "text",
      "id": "shop_lebel",
      "label": "Shop Label"
    },
    {
      "type": "url",
      "id": "shop_url",
      "label": "Shop Url"
    },
    {
      "type": "image_picker",
      "id": "after_before_image",
      "label": "After before image"
    },
    {
      "type": "richtext",
      "id": "msg",
      "label": "Client Massege"
    },
    {
      "type": "richtext",
      "id": "client_name",
      "label": "Client Name"
    },
    {
      "type": "image_picker",
      "id": "banner_img",
      "label": "Banner image"
    }
  ],
  "presets": [
    {
      "name": "Banner with text"
    }
  ]
}
{% endschema %}

