<div class="container">
    {% if section.settings.product_logo != blank %}
        <div class="product_image">
            <img loading="lazy" src="{{ section.settings.product_logo | img_url: 'medium' }}" />
        </div>
    {%endif%}
    <div class="details">
        {%if section.settings.product_heading != blank%}
            <h2>{{ section.settings.product_heading }}</h2>
        {%endif%}
        {{ product.metafields.global.benefit-details.value }}
        <div class="brands">
          {{ product.metafields.global.brand.value }}
        </div>
    </div>
</div>
{% schema %}
{
  "name": "Product Benefit",
  "tag": "section",
  "class": "benefit",
  "settings": [
    {
      "type": "image_picker",
      "id": "product_logo",
      "label": "Product Logo"
    },
    {
      "type": "text",
      "id": "product_heading",
      "label": "Product Heading"
    }
  ],
  "presets": [
    {
        "name": "Product Benefit"
    }
  ]
}
{% endschema %}
