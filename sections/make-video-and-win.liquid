{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="container-fluid p-0">
  <div class="row m-0">
    <div class="col-lg-6 p-0">
      <div class="video_image desktop-video">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | img_url: 'master' }}">
        {% endif %}
      </div>
      <div class="video_image mobile-video">
        {% if section.settings.image2 != blank %}
          <img src="{{ section.settings.image2 | img_url: 'master' }}">
        {% endif %}
      </div>
    </div>
    <div class="col-lg-6 p-0">
      <div class="video-info">
        <div class="video-info-top">
          {% if section.settings.heading != blank %}
            <h2>{{ section.settings.heading }}</h2>
          {% endif %}
          <ul>
            {% assign a = 1 %}
            {% for block in section.blocks %}
              <li>
                <span>{{ a }}</span> {{ block.settings.point }}
              </li>
              {% assign a = a | plus: 1 %}
            {% endfor %}
          </ul>
        </div>
        <div class="video-making-form contact page-width--narrow section-{{ section.id }}-padding">
          <div class="contact-bg-wrap">
            {%- liquid
              assign contact_form_class = 'isolate'
              if settings.animations_reveal_on_scroll
                assign contact_form_class = 'isolate scroll-trigger animate--slide-in'
              endif
            -%}
            {%- form 'contact', id: 'MakeVideoForm', class: contact_form_class -%}
              {%- if form.posted_successfully? -%}
                <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
                  {% render 'icon-success' %}
                  {{ 'templates.contact.form.post_success' | t }}
                </h2>
              {%- elsif form.errors -%}
                <div class="form__message">
                  <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
                    {% render 'icon-error' %}
                    {{ 'templates.contact.form.error_heading' | t }}
                  </h2>
                </div>
                <ul class="form-status-list caption-large" role="list">
                  <li>
                    <a href="#ContactForm-email" class="link">
                      {{ form.errors.translated_fields.email | capitalize }}
                      {{ form.errors.messages.email }}
                    </a>
                  </li>
                </ul>
              {%- endif -%}
              <div class="contact__fields mt-0">
                <div class="form-group field-group">
                  <span>{{ 'templates.contact.form.firstname' | t }}</span>
                  <input
                    class="field__input"
                    autocomplete="name"
                    type="text"
                    id="ContactForm-fname"
                    name="contact[{{ 'templates.contact.form.firstname' | t }}]"
                    value="{% if form.firstname %}{{ form.firstname }}{% elsif customer %}{{ firstname }}{% endif %}"
                    placeholder="Enter First Name"
                  >
                </div>

                <div class="form-group field-group">
                  <span>{{ 'templates.contact.form.lastname' | t }}</span>
                  <input
                    class="field__input"
                    autocomplete="name"
                    type="text"
                    id="ContactForm-lname"
                    name="contact[{{ 'templates.contact.form.lastname' | t }}]"
                    value="{% if form.lastname %}{{ form.lastname }}{% elsif customer %}{{ lastname }}{% endif %}"
                    placeholder="Enter Last Name"
                  >
                </div>
              </div>

              <div class="field-group">
                <span>{{ 'templates.contact.form.email' | t }}</span>
                <input
                  autocomplete="email"
                  type="email"
                  id="ContactForm-email"
                  class="field__input"
                  name="contact[email]"
                  spellcheck="false"
                  autocapitalize="off"
                  value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                  aria-required="true"
                  {% if form.errors contains 'email' %}
                    aria-invalid="true"
                    aria-describedby="ContactForm-email-error"
                  {% endif %}
                  placeholder="Enter Email Address"
                >
                {%- if form.errors contains 'email' -%}
                  <small class="contact__field-error" id="ContactForm-email-error">
                    <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                    <span class="form__message">
                      {%- render 'icon-error' -%}
                      {{- form.errors.translated_fields.email | capitalize }}
                      {{ form.errors.messages.email -}}
                    </span>
                  </small>
                {%- endif -%}
              </div>

              <div class="contact__fields mt-0">
                <div class="form-group field-group">
                  <span>
                    {{- 'templates.contact.form.ticktok' | t }}
                  </span>
                  <input
                    class="field__input"
                    autocomplete="name"
                    type="text"
                    id="ContactForm-fname"
